{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", "schedule:earlyMondays"],
  "packageRules": [
    {
      "groupName": "{{manager}}",
      "matchPackageNames": ["*"]
    },
    {
      "matchPackageNames": [
        "/zod/",
        "/tailwind-variants/",
        "/tracing-subscriber/"
      ],
      "enabled": false
    }
  ],
  "semanticCommitType": "chore",
  "automerge": true,
  "automergeStrategy": "merge-commit"
}
